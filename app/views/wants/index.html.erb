  </header>

<div id="section5" class="container">
   <h1 class="text-center">みんなのとうこう</h1>

   <div class="container mt-5 mx-5 card"> 
<% if @wants.any? %>
  <ul class="list-unstyled">
    <% @wants.each do |want| %>
      <li class="mb-3 d-flex">
        <img class="rounded me-2" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <p><%= link_to 'View profile', user_path(user), class: "text-decoration-none" %></p>
        <div>
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= @prefecture.name %></p>
            <p><%= @want.content %></p>
          </div>
        </div>
         <li><a href=""><%= render 'favorites/favorite_button', micropost: micropost %></a></li>
         <li><%= @count_likes %></li>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>
</div>
</div> 



