<div class="main mt-5">
  <div class="card devise-card mx-5">
    <div class="form-wrap">
      <div class="form-group text-center">
        <h2 class="logo-img mx-auto mt-5">Let's know about Japan</h2>
      </div>
       <%= form_with(url: login_path, scope: :session) do |f| %>
       

        <div class="form-group mx-5 mt-5">
          <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
        </div>

        <div class="form-group mx-5 mt-2">
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
        </div>

        <div class="actions mx-5 mt-2 mb-5">
          <%= f.submit "サインインする", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <br>

      <p class="devise-link mx-5">
        アカウントをお持ちでないですか？
        <%= link_to "登録する", signup_path %>
      </p>
    </div>
  </div>
</div>